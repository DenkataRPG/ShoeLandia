@model ShoeLandia.ViewModels.User.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<h1>Register</h1>
<div class="row">
    <div class="col-md-6">
        <form id="registerForm" method="post">
            <h2>Create a new account</h2>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <input asp-for="Email" class="form-control" placeholder="Email" autocomplete="username" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="Password" class="form-control" placeholder="Password" autocomplete="new-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" autocomplete="new-password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Register</button>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}