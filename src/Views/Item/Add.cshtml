@using System.Security.Claims
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ShoeLandia.ViewModels.Item.ItemFormViewModel

@{
    ViewData["Title"] = "Add new Item";
    var categoryItems = this.Model.CategoriesItems.Select(x => new SelectListItem(x.Value, x.Key));
}

<div class="container text-center">
    <h1>Add new item</h1>
</div>
<form method="post">
    <input type="hidden" asp-for="OwnerId" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <input asp-for="Description" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Size" class="form-label">Size</label>
        <input asp-for="Size" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Colors" class="form-label">Colors</label>
        <input asp-for="Colors" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="categoryItems"></select>
    </div>
    <div class="mb-3">
        <label asp-for="Type" class="form-label">Type</label>
        <input asp-for="Type" class="form-control">
    </div>
    <div class="mb-3 form-group">
        <label asp-for="Images" class="form-label">Images</label>
        <input asp-for="Images" class="form-control">

    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
